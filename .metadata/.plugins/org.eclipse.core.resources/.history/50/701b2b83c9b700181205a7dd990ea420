package ch11;

import java.util.*;

public class MyStack {

	public Object push(Object item){
		addElement(item);
		return item;
	}
	
	public Object pop(){
		Object obj = peek();
		// Stack에 저장된 마지막 요소를 읽어온다.
		removeElementAt(size()-1);
		return obj;
	}
	
	public Object peek(){
		int len = size();
		
		if(len==0)
			throw new EmptyStackException();
		//
		return elementAt(len -1);
	}
	
	public boolean empty(){
		return size() == 0;
	}
	
	public int search(Object o){
		int i = lastIndexOf(o);
		
		if(i >= 0){
			return size() - i;
		}
		return -1;
	}

}
