package star;

public class star8 {

	public static void main(String[] args) {
		// ctrl+D 한줄삭제
		// sysout 입력하고 ctrl+space
		
        for(int i=1; i<=5; i++) {
            
            for(int j=0; j<(9-i)/2; j++) {
                System.out.print(" ");
            }
        
            for(int k=0; k<2*i-1; k++) {
                System.out.print("★");
            }
        
            for(int m=0; m<9-2-i; m++) {
                System.out.print(" ");
            }
            System.out.println();
        }
        System.out.println();
	
	}

}
