package ooptest;

class Point {
	int x;
	int y;
	static int n1;
	static int n2;

	public String toString() {
		return "x : " + x + ", y : " + y;
	}
	
	Point(){
		x = 1; // x는 인스턴스 변수
		y = 1;
	}; // 기본생성자
	
	Point(int x, int y){
		this.x = x;
		this.y = y;
	}; // 매개변수 있는 생성자
	
	double getDistance(int x1, int y1){ // 인스턴스 메서드 im -> iv사용 & 객체 생성후 사용가능
		double result = Math.sqrt((x1-x)*(x1-x)+(y1-y)*(y1-y));
		return result;
	}
	
	static double getDistance(int x1, int y1){ // 클래스 메서드 cm -> iv사용x & 클래스.메서드명으로 바로 사용가능
		double result = Math.sqrt((x1-n1)*(x1-n1)+(y1-n2)*(y1-n2));
		return result;
	}
	
	// 오버라이딩
	public String equals() {
		if(){
			
		} else {
			return false;
		}
	}
	
}

public class PointTest {
	public static void main(String[] args) {
		Point p = new Point();
		Point p1 = new Point(); // 기본생성자 이용
		Point p2 = new Point(2,2); // 매개변수생성자 이용
		System.out.println("p.x=" + p.x);
		System.out.println("p.y=" + p.y);
		System.out.println(p1.toString()); //기본생성자 호출
		System.out.println(p2.toString()); //매개변수생성자 호출
		System.out.println(p1.getDistance(3,3)); //(1,1)와(3,3)사이 길이 계산
//		System.out.println(Math.sqrt(8));
		System.out.println(Point.getDistance(3,2,3,2)); //(2,2)와(3,3)사이 길이 계산
	}
}
