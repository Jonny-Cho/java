package ch4_prac;

public class Ex4_10 {

	public static void main(String[] args) {
	// int타입 변수 num이 있을 때, 각 자리의 합을 더한 결과를 출력하는 코드를 완성하라
	// 문자열로 변환하지 말고 숫자로만 처리해야 한다.
		
		int num = 123456;
		int sum = 0;
		
		for(int i=0;i<5;i++){
			int a = (num/(int)(Math.pow(10, i))%10);
			sum += a;
		}
		
		System.out.println("sum="+sum);
		
	}

}
