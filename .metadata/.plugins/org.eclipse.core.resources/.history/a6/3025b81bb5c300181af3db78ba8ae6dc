package star;

import java.util.Scanner;

public class quiz02 {

public static void main(String[] args) {

  Scanner in = new Scanner(System.in);

  int result;
  int num;
  
  do {

  System.out.print("양수 입력:");
  num = in.nextInt();

  }while(num>=0) {

    if(num%2==0) {

      result+=num;

    }

   }

System.out.print(result);

  }

}
