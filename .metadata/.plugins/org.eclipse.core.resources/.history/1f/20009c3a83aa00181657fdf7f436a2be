package star;

public class star8 {

	public static void main(String[] args) {
		// ctrl+D 한줄삭제
		// sysout 입력하고 ctrl+space
		
		
        for(int i=1; i<size-1; i++) {
            
            for(int j=0; j<size-2-i; j++) {
                System.out.print(" ");
            }
        
            for(int k=0; k<2*i-1; k++) {
                System.out.print("★");
            }
        
            for(int m=0; m<size-2-i; m++) {
                System.out.print(" ");
            }
            System.out.println("");
        }
        System.out.println("");


출처: http://elena90.tistory.com/entry/JAVA-자바-별찍기 [오니님의짱꺤뽀]
		
	}

}
