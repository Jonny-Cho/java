package star;

import java.util.Scanner;


public class quiz02 {

public static void main(String[] args) {

  Scanner in = new Scanner(System.in);

  int result;

  do {

  System.out.print("양수 입력:");

  int num = in.nextInt();

  }while(num>=0) {

    while(num%2==0) {

      result+=num;

    }

   }

System.out.print(result);

  }


}


