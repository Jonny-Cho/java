package ooptest2;

class Point {
	int x;
	int y;
	
	public String toString(){
		return "x = " + x +" , "+ "y = " + y;
	}
	
	Point(){
		this(1,1);
//		x = 1;
//		y = 1;
	};
	Point(int x, int y){
		this.x = x;
		this.y = y;
	};
}

public class oop1 {

	public static void main(String[] args) {
		Point p = new Point();
		p.x = 1;
		p.y = 1;
		Point p2 = new Point(2,2);
		System.out.println(p.x);
		System.out.println(p.y);
		System.out.println(p.toString());
		System.out.println(p2);
	}

}
