package ch5;

import java.util.Arrays;

public class ArrayEx {
	public static void main(String[] args) {
		// 중복제거
		// (카운팅 - 배열을 이용해서 각 숫자의 갯수를 센다)
		// 1. 카운팅으로 배열 numArr을 오름차순 정렬하시오.
		// (1,1,1,2,3,3,3,4,4,5,5,5,7)
		// 2. 카운팅으로 중복을 제거한 결과를 출력하시오.
		// (1,2,3,4,5,7)
		
		
//		newArr[0]==1
//		newArr[1]==1
//		newArr[2]==1
//		newArr[3]==2
//		newArr[4]==3
//		newArr[5]==3
//		newArr[6]==3
//		newArr[7]==4
//		newArr[8]==4
//		newArr[9]==5
//		newArr[10]==5
//		newArr[11]==5
//		newArr[12]==7
// 1, 3번출력 / 2, 1번출력 ...
		
		
		int[] numArr = {1,2,4,4,1,3,3,1,3,5,7,5,5};
		int[] counter = new int[numArr.length];
		
		for(int i=0;i<numArr.length;i++){
			counter[numArr[i]]++;
		}
		
		for(int i=0;i<numArr.length-1;i++){
			for(int j=0;j<counter[i];j++){
				System.out.print("오름차순 :"+i);
			}
		}
		
		System.out.println();
		
		for(int i=0;i<numArr.length;i++){
			if(counter[i]!=0){
				System.out.print("중복제거 : "i);
			}
		}
	}
}
