		int result =0; // number 변수 를 거꾸로 변환해서 담을 변수
//		while(tmp !=0) {
			for(int i=0;i<5;i++){
				tmp = ((int)(number/(Math.pow(10, i))%10));
				result = tmp*(Math.pow(10, i)
			}
//		}
		
		
		if(number == result)
